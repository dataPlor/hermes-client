{
  "name": "@hermes/search",
  "version": "0.1.0",
  "exports": "./mod.ts",
  "tasks": {
    "dev": "deno run --watch --allow-net --allow-read --allow-env mod.ts",
    "start": "deno run --allow-net --allow-read --allow-env mod.ts",
    "test": "deno test --allow-all",
    "fmt": "deno fmt",
    "lint": "deno lint"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.0",
    "@std/http": "jsr:@std/http@^1.0.0",
    "@std/path": "jsr:@std/path@^1.0.0"
  },
  "exclude": ["node_modules", "dist"],
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve",
    "include": ["src/", "mod.ts"],
    "exclude": ["dist/"]
  },
  "lint": {
    "include": ["src/", "mod.ts"],
    "exclude": ["dist/"],
    "rules": {
      "tags": ["recommended"]
    }
  }
}
